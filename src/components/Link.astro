---
const { props } = Astro;
const classNames = [
  "underline",
  "underline-offset-4",
  "font-medium",

  // Light mode
  "text-cyan-700",
  "hover:text-black",
  "hover:bg-yellow-400",
  "focus:text-black",
  "focus:bg-yellow-400",
  "hover:ring-4",
  "hover:ring-yellow-400",
  "focus:ring-4",
  "focus:ring-yellow-400",

  // Dark mode
  "dark:text-cyan-400",
  "dark:hover:text-black",
  "dark:focus:text-black",

  // Optional - include passed args
  props.class,
];
delete props.class;
---

<a {...props} class:list={classNames}><slot /></a>
