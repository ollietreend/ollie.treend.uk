---
import Link from "./Link.astro";
import { Image } from "astro:assets";
const getIcon = async (name) =>
  (await import(`../images/icons/${name}.svg`)).default;

const { title, url } = Astro.props;
const icon = await getIcon(Astro.props.icon);
---

<Link href={url} class="text-xl flex gap-2 items-center">
  <Image src={icon} alt="" class="w-8" />
  {title}
</Link>
