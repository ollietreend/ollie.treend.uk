---
import Link from "@src/components/content/Link.astro";
import { Image } from "astro:assets";
const getIcon = async (name) =>
  (await import(`../images/icons/${name}.svg`)).default;

const { title, url } = Astro.props;
const icon = await getIcon(Astro.props.icon);

const linkClass = [
  "text-lg flex gap-2 items-center",
  "hover:ring-4 focus:ring-4",
  "hover:ring-yellow-400 focus:ring-yellow-400",
  "dark:hover:ring-yellow-500 dark:focus:ring-yellow-500",
];
---

<Link href={url} class:list={linkClass}>
  <Image src={icon} alt="" class="w-8" />
  {title}
</Link>
